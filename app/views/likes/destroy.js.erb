like = document.getElementById("like_<%= @like.id %>")
like.id = "bet_<%= @like.bet.id %>";
like.setAttribute("data-method", "post");
like.setAttribute("href", "/bets/<%= @like.bet.id %>/likes");
like.childNodes[1].classList.remove("card-opaque");
like.childNodes[1].classList.add("card-light");

cardLikers = document.getElementById("card_bet_<%= @like.bet.id %>")
cardLikers.childNodes[3].childNodes.forEach((node) => {
  if (node.id === "user_<%= @like.user.id %>") {
    node.remove();
  }
})
