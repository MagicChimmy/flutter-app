<%= render 'shared/navbar', title: "Profile" %>

<div class="index-cards-container">

  <% if @user == current_user %>


  <ul class="nav nav-pills justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active px-3 mx-3" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">Statistics</a>
    </li>
    <li class="nav-item">
      <a class="nav-link px-3 mx-3" id="pills-pending-tab" data-toggle="pill" href="#pills-pending" role="tab" aria-controls="pills-pending" aria-selected="false">Balance</a>
    </li>
  </ul>

<div class="tab-content" id="pills-tabContent">

<div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">

   <h5>Numbers of bets proposed</h5>
    <h6><%= @user.proposed_bets.count %></h6>
    <h5>Numbers of bets taken</h5>
    <h6><%= @user.received_bets.count %></h6>
    <h5>Biggest Wager</h5>
    <h6><%= @user_bets.sort{ |b| b.stake }.reverse.first.stake %></h6>

  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"%>
</div>

  <div class="tab-pane fade" id="pills-pending" role="tabpanel" aria-labelledby="pills-pending-tab">

        <p> Balance stats </p>

  </div>
</div>

<% else %>


<div class="index-cards-container">

  <ul class="nav nav-pills justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active px-3 mx-3" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">Statistics</a>
    </li>
    <li class="nav-item">
      <a class="nav-link px-3 mx-3" id="pills-pending-tab" data-toggle="pill" href="#pills-pending" role="tab" aria-controls="pills-pending" aria-selected="false">Head-To-Head</a>
    </li>
  </ul>

<div class="tab-content" id="pills-tabContent">

<div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">

   <h5>Numbers of bets proposed</h5>
    <h6><%= @user.proposed_bets.count %></h6>
    <h5>Numbers of bets taken</h5>
    <h6><%= @user.received_bets.count %></h6>
    <h5>Biggest Wager</h5>
    <h6><%= @user_bets.sort{ |b| b.stake }.reverse.first.stake %></h6>

  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"%>
</div>

  <div class="tab-pane fade" id="pills-pending" role="tabpanel" aria-labelledby="pills-pending-tab">

        <p> Head to Head </p>

  </div>

      <% end  %>

</div>


